---
import "../styles/global.css";
import {TALKS} from "../data/talks";
---

<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta
            name="description"
            content="Talks, presentations, and workshops by Jafar Rezaei."
    />
    <meta name="keywords" content="talks,presentation,jafar rezaei,conference,workshop"/>
    <meta name="author" content="Jafar Rezaei"/>
    <meta name="theme-color" content="#000"/>
    <link rel="canonical" href="https://talks.catshoulder.dev"/>

    <!-- Open Graph Meta -->
    <meta property="og:title" content="Talks by Jafar Rezaei"/>
    <meta
            property="og:description"
            content="A collection of talks and presentations by Jafar Rezaei."
    />
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="/android-chrome-512x512.png"/>

    <!-- Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"/>
    <link rel="manifest" href="/site.webmanifest"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Talks by Jafar Rezaei (sayjeyhi) | catshoulder.dev</title>
</head>
<body>
<div class="bg-gray-900 dark:bg-gray-900 min-h-screen p-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-100 dark:text-gray-100 mt-20 mb-30 text-center">Talks Timeline</h1>

        <div class="relative">
            <div class="absolute left-2 top-0 bottom-0 w-px bg-gray-700 "></div>

            <ul class="space-y-10 md:space-y-8">
              {TALKS.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).map((talk, index) => (
                <li key={index} class="group relative flex items-start">
                  <div class="absolute left-0 w-4 h-4 bg-blue-600 dark:bg-gray-700 rounded-full ring-6 ring-gray-900 dark:ring-gray-900 focus:outline-none transition-all duration-200 group-hover:bg-blue-600  motion-reduce:transition-none" tab-index={0} role="button" aria-label="Timeline milestone"></div>

                  <div class="flex gap-8 ml-12 pb-8 md:pb-6">
                      <img src={talk.image} alt={talk.title} class="w-1/4 min-w-1/4 h-48 object-cover rounded-lg mb-4 shadow-lg"/>
                      <div>
                          <h3 class="text-xl font-bold text-gray-100 dark:text-gray-100 mb-1">{talk.title}</h3>
                          <span class="text-xs text-gray-100 dark:text-gray-100 mb-1">{talk.subtitle}</span>
                          <p class="text-sm text-gray-400 dark:text-gray-400 mb-3">{talk.date}</p>
                          <p class="text-gray-300 dark:text-gray-300 leading-relaxed">
                            {talk.description}
                          </p>
                      </div>
                  </div>
                  <a href={talk.link} target="_blank" rel="noopener noreferrer" class="absolute right-0 top-0 text-blue-500 dark:text-blue-300 hover:underline text-sm">slides</a>
                </li>
              ))}
            </ul>
        </div>
    </div>
</div>
</body>
</html>
